<%- include('../templates/header'); -%>

<div class="container">
	<h1>Female Category</h1>
	<form action="/vote" method="post">
		<div class="contestant-selector">
			<div class="image-container">
				<h2>A</h2>
				<input
					id="first-female"
					type="radio"
					name="user"
					value="FirstFemale"
					checked
				/>
				<label class="contestant first-female" for="first-female"></label>
			</div>
			<div class="image-container">
				<h2>B</h2>
				<input
					id="second-female"
					type="radio"
					name="user"
					value="SecondFemale"
				/>
				<label class="contestant second-female" for="second-female"></label>
			</div>
			<div class="image-container">
				<h2>C</h2>
				<input id="third-female" type="radio" name="user" value="ThirdFemale" />
				<label class="contestant third-female" for="third-female"></label>
			</div>

			<input type="hidden" name="female" value="female" />
		</div>
		<div class="row">
			<div class="col text-center">
				<button
					id="femaleBtn"
					type="submit"
					class="btn btn-success btn-lg btn-block"
				>
					Submit Vote
				</button>
			</div>
		</div>
	</form>
</div>
<script>
	const femaleBtn = document.querySelector('#femaleBtn');
	femaleBtn.addEventListener('click', () => {
		setTimeout(() => {
			femaleBtn.disabled = true;
		}, 0);
	});
</script>
<%- include('../templates/footer'); -%>
