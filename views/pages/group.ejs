<%- include('../templates/header'); -%>

<div class="container">
	<h1 class="mt-4">Family Category</h1>

	<div class="alert alert-info mt-3 mb-4" role="alert">
		Please select the contestant you like and click next
	</div>

	<form action="/vote" method="post">
		<div class="contestant-selector">
			<div class="image-container">
				<h2>A</h2>
				<input
					id="first-group"
					type="radio"
					name="user"
					value="FirstGroup"
					checked
				/>
				<label class="contestant first-group" for="first-group"></label>
			</div>
			<div class="image-container">
				<h2>B</h2>
				<input id="second-group" type="radio" name="user" value="SecondGroup" />
				<label class="contestant second-group" for="second-group"></label>
			</div>
			<div class="image-container">
				<h2>C</h2>
				<input id="third-group" type="radio" name="user" value="ThirdGroup" />
				<label class="contestant third-group" for="third-group"></label>
			</div>

			<input type="hidden" name="group" value="group" />
		</div>
		<div class="row">
			<div class="col text-center">
				<button
					id="groupBtn"
					type="submit"
					class="btn btn-success btn-lg btn-block mb-5"
				>
					Next
				</button>
			</div>
		</div>
	</form>
</div>
<script>
	const groupBtn = document.querySelector('#groupBtn');
	groupBtn.addEventListener('click', () => {
		setTimeout(() => {
			groupBtn.disabled = true;
			groupBtn.innerHTML =
				'<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Loading...';
		}, 0);
	});
</script>
<%- include('../templates/footer'); -%>
